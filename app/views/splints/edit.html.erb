<div id="edit">
  <div id="edit-content">
    <%= form_with model: @splint, local: true, id: 'edit-form' do |form| %>
      <div>
        <%= form.text_field :content %>
      </div>
      <div>
        <%= form.hidden_field :line_id, :value => session[:line_id] %>
      </div>
      <%= form.submit 'Update' %>
    <% end %>
  </div>
</div>