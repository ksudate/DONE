<div>
  <table>
    <tr>
      <th>Problem</th>
    </tr>
    <% problem.each do |pb| %>
      <% if pb.sp_number == sp_number %>
        <tr>
          <td>
            <a href="/splints/<%=pb.id%>" class="splint-a"><%= react_component("HelloWorld", { greeting: pb.content }) %></a>
          </td>
        </tr>
      <% end %>
    <% end %>
  </table>
  <div class="new-link-div"><%= link_to '+', new_splint_path(sp_number: sp_number, kpt: 'Problem'), id: 'new-link' %></div>
</div>