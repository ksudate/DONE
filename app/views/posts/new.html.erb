<div id="new">
  <div id="new-content">
    <%= form_with model: @post, local: true, id: 'new-form' do |form| %>
      <div>
        <%= form.text_field :content %>
      </div>
      <div>
        <%= form.radio_button(:rank, "High") %>
        <%= form.label(:rank, "High") %>
        <%= form.radio_button(:rank, "Low") %>
        <%= form.label(:rank, "Low") %>
      </div>
      <div>
        <%= form.date_select :deadline %>
        <%= form.hidden_field :line_id, :value => session[:line_id] %>
      </div>
      <%= form.submit 'Add' %>
    <% end %>
  </div>
</div>