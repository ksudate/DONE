<!DOCTYPE html>
<html>
  <head>
    <title>DONE</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application' %>
  </head>

  <body>
    <div id="header">
      <div><a href="/"><p>DONE</p></a></div>
      <% if session[:access_token] %>
        <div><%= render 'shared/menubar' %></div>
        <div id="header-right">
          <%= link_to 'ログアウト', logout_path, class: "header-link" %>
          <%= link_to 'ホーム', posts_path, class: "header-link" %>
        </div>
      <% end %>
    </div>
    <%= yield %>
  </body>
</html>
